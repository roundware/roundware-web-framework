{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "target": "es5",
    "sourceMap": true,
    "module": "commonjs",
    "strict": true,

    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": false,

    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true
  }
}
