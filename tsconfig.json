{
  "include": ["./src/**/*", "./index.d.ts"],
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "commonjs",
    "strict": true,

    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,

    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "esModuleInterop": true
  }
}
